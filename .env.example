# API Keys
# Anthropic Claude API key for LLM operations
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API key for embeddings
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: HuggingFace API key for embeddings (optional)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Database
# ChromaDB persistence directory
CHROMA_DB_PATH=./chroma_db

# Embeddings
# Embedding model to use (openai or huggingface)
EMBEDDING_MODEL=openai
# OpenAI embedding model name
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# HuggingFace embedding model name (if using HuggingFace)
# HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Configuration
# Claude model to use
CLAUDE_MODEL=claude-3-sonnet-20240229
# Maximum tokens for Claude responses
CLAUDE_MAX_TOKENS=4096
# Temperature for Claude (0.0 to 1.0)
CLAUDE_TEMPERATURE=0.0

# Application Settings
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Enable debug mode
DEBUG=false

# Cache Settings
# Enable caching
ENABLE_CACHE=true
# Cache directory
CACHE_DIR=./.cache
# Cache TTL in seconds (default: 24 hours)
CACHE_TTL=86400

# Vector Search Settings
# Number of top results to return from vector search
TOP_K=5
# Similarity threshold (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.7

# API Spec Settings
# Directory containing API spec files
API_SPEC_DIR=./data/specs
# Auto-reload specs on file change
AUTO_RELOAD_SPECS=true

# Output Settings
# Default output format (json, table, plain)
DEFAULT_OUTPUT_FORMAT=table
# Enable colored output
ENABLE_COLORS=true

# Advanced Settings
# Enable streaming responses
ENABLE_STREAMING=false
# Enable telemetry/metrics collection
ENABLE_TELEMETRY=false
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5
